{
	"name": "krauter",
	"version": "3.1.12",
	"description": "An Express router that generates middleware for quickly creating data-driven web services",
	"keywords": [
		"express",
		"backend",
		"api",
		"web services",
		"routing",
		"middleware",
		"database",
		"promise",
		"query",
		"sql",
		"postgresql",
		"pg",
		"mysql",
		"sql server",
		"mssql",
		"sqlite",
		"sqlite3"
	],
	"homepage": "https://brandon-d-mckay.github.io/krauter",
	"bugs": "https://github.com/brandon-d-mckay/krauter/issues",
	"repository": "brandon-d-mckay/krauter",
	"author": "Brandon D. McKay <brandon.d.mckay@gmail.com> (https://linkedin.com/in/brandon-d-mckay)",
	"license": "MIT",
	"engines": {
		"node": ">= 0.10.0"
	},
	"main": "index.js",
	"scripts": {
		"lint": "eslint index.js",
		"test": "mocha test.js"
	},
	"dependencies": {
		"express": "^4.16.4",
		"methods": "^1.1.2"
	},
	"devDependencies": {
		"chai": "^4.2.0",
		"eslint": "^5.7.0",
		"mocha": "^5.2.0",
		"mssql": "^4.2.1",
		"mysql": "^2.16.0",
		"pg": "^7.5.0",
		"sinon": "^7.0.0",
		"sqlite3": "^4.0.2"
	},
	"eslintConfig": {
		"env": {
			"node": true,
			"es6": true
		},
		"extends": "eslint:recommended",
		"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "module"
		},
		"rules": {
			"linebreak-style": [
				"error",
				"unix"
			],
			"indent": [
				"error",
				"tab"
			],
			"semi": [
				"error",
				"always"
			],
			"quotes": [
				"error",
				"single"
			]
		}
	}
}
